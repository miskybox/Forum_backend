# Base de datos PostgreSQL
DB_URL=jdbc:postgresql://localhost:5432/forum_viajeros
DB_USER=postgres
DB_PASSWORD=your_database_password_here

# JWT Secret Key - IMPORTANTE: Generar una clave segura con: openssl rand -base64 64
JWT_SECRET_KEY=GENERATE_A_SECURE_64_BYTE_BASE64_KEY_HERE

# Configuracion Spring
SPRING_APPLICATION_NAME=backend
SPRING_PROFILES_ACTIVE=dev

# Usuarios por defecto (CAMBIAR EN PRODUCCION)
# Las contrasenas deben tener: minimo 8 caracteres, mayuscula, minuscula y caracter especial
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=CHANGE_THIS_PASSWORD!

USER_USERNAME=user
USER_EMAIL=user@example.com
USER_PASSWORD=CHANGE_THIS_PASSWORD!

MODERATOR_USERNAME=moderator
MODERATOR_EMAIL=moderator@example.com
MODERATOR_PASSWORD=CHANGE_THIS_PASSWORD!

# CORS (separar multiples origenes con comas)
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Cookies
COOKIE_SECURE=false
COOKIE_SAME_SITE=Lax
